{
    "compilerOptions": {
        "outDir": "./dist/",   // outDir - 컴파일 후 자바스크립트로 변환된 파일이 저장될 경로 
        "sourceMap": true,
        // 옵션 "noImplicitAny" - 타입스크립트는 개발자가 어떤 객체에 타입을 지정하지 않았을 경우 자동으로 타입을 추론하는데, 
        // 만약 any라는 타입으로 추론될 경우 에러로 처리("noImplicitAny": true)되도록 하는 옵션 
        "noImplicitAny": true,   // 객체 타입 "any" - 어떤 타입의 값으로도 사용될 수 있는 타입 
        "module": "es6",
        "target": "es5",   // 타입스크립트 코드가 자바스크립트 코드로 컴파일될 때, 만들어질 자바스크립트 언어의 버전을 "es5"로 설정 
        "allowJs": true
    }
}